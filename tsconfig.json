{
  "compilerOptions": {
    "target": "ES2022",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",

    "declaration": false,
    "emitDeclarationOnly": false,

    "strict": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
